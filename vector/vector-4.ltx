                \draw[thick,name path=aq] (a)--($0.4*(b)$)node[above right]{Q};
                \draw[thick,name path=bp] (b)--($0.25*(a)$)node[above left]{P};
                \fill[name intersections={of=aq and bp,by={g}}](g)node[left=2mm]{G} circle (2pt);

